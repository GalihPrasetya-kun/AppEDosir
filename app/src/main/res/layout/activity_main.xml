<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/add_data"
        android:text="Tambah Data" />

    <Button
        android:id="@+id/btn_penerima"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/btn_tambah"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/profile_pm"
        android:text="Data Penerima Manfaat" />

    <Button
        android:id="@+id/btn_berkas"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/desain_folder_1"
        android:text="Berkas Penerima Manfaat"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_penerima"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/red"
        android:drawableRight="@drawable/logout"
        android:text="Logout" />

</RelativeLayout>