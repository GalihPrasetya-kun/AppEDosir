<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white"
    tools:context=".MainTambahActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        android:drawableEnd="@drawable/back" />

    <Button
        android:id="@+id/btn_tambah_data"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/add_profile"
        android:text="Tambah Data Penerima Manfaat" />

    <Button
        android:id="@+id/btn_tambah_berkas"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/btn_tambah_data"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/blue"
        android:drawableLeft="@drawable/add_file"
        android:text="Tambah Berkas Penerima Manfaat" />

</RelativeLayout>